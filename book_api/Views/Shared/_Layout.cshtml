<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Render my css -->
    @Styles.Render("~/Content/css")
</head>
<body>
    <!-- Render index.cshtml -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Render any included scripts or libraries-->
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script>
        $("#get_list_btn").click(function () {
            $.ajax({
                url: "./books",
                dataType: "xml",
                success: function (data) {
                    $("#get_list_btn").removeClass("btn-primary").addClass("btn-success").text("Success!").unbind("click");
                    $(data).find("Book").each(function () {
                        $("#book-table").append($(this).find("title").text());
                    });
                    
                }, error: function () {
                    $("#get_list_btn").removeClass("btn-primary").addClass("btn-danger").text("Error: Try again");
                }
            });
        });
    </script>
</body>
</html>
